#!/usr/bin/env node

/**
 * Core dependencies.
 */

var fs = require('fs');
var resolve = require('path').resolve;

/**
 * External dependencies.
 */

var optimist = require('optimist');
var options = optimist.argv;

/**
 * Internal dependencies.
 */

var hydro = require('..')();
var conf = resolve(options.setup || 'hydro.conf.js');

/**
 * CLI flags.
 */

var flags = [
  '--formatter    specify formatter to use',
  '--suite        set top-level test suite',
  '--help         show help information',
  '--version      show hydro version',
];

// --help

if (options.help) {
  console.log();
  console.log('Usage: hydro [debug] [options] path/to/test(s)');
  console.log();
  flags.forEach(function(flag) {
    console.log('  ' + flag);
  });
  console.log();
  process.exit(0);
}

// -version

if (options.version) {
  console.log(require('../package.json').version);
  process.exit(0);
}

/**
 * Set `NODE_ENV` to test if none
 */

process.NODE_ENV = process.NODE_ENV || 'test';

/**
 * Load all tests.
 */

if (options._.length) options.tests = options._;
delete options._;

/**
 * Try to load the bootstrap file.
 */

if (fs.existsSync(conf)) {
  var setup = require(conf);
  if ('function' === typeof setup) setup(hydro);
}

/**
 * Override the default options.
 */

hydro.set(options);

/**
 * Failed tests counter.
 */

var failures = 0;

hydro.on('post:test', function(test) {
  failures += test.failed ? 1 : 0;
});

/**
 * Seek and destroy.
 */

hydro.run(function() {
  process.exit(failures);
});
