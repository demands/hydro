#!/usr/bin/env node

/**
 * Core dependencies.
 */

var fs = require('fs');
var path = require('path');

/**
 * External dependencies.
 */

var argv = require('optimist').argv;

/**
 * Internal dependencies.
 */

var hydro = require('..').dispatcher;

/**
 * --help.
 */

if (argv.help) {
  console.log();
  console.log('    Usage: hydro [debug] [files]');
  console.log();
  process.exit(0);
}

/**
 * --version.
 */

if (argv.version) {
  console.log(require('../package.json').version);
  process.exit(0);
}

/**
 * Glob pattern.
 */

argv.pattern = argv._[0] || 'test/*.js';

/**
 * Formatter
 */

argv.formatter = argv.formatter || 'hydro-simple';

/**
 * Try to load the bootstrap file.
 */

try {
  var setup = require(path.resolve(argv.setup || './hydro.conf.js'));
  if ('function' === typeof setup) setup(hydro);
} catch(e) {}

/**
 * Find and run.
 */

hydro.configure(argv, function() {
  hydro.loadFormatter();
  hydro.loadTests();
  hydro.run(function(result) {
    process.exit(result.failed.length);
  });
});
