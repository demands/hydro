#!/usr/bin/env node

/**
 * Core dependencies.
 */

var fs = require('fs');
var path = require('path');

/**
 * External dependencies.
 */

var options = require('optimist').argv;
var glob = require('glob');

/**
 * Internal dependencies.
 */

var hydro = require('..')();


// --help

if (options.help) {
  console.log();
  console.log('    Usage: hydro [debug] [files]');
  console.log();
  process.exit(0);
}

// -version

if (options.version) {
  console.log(require('../package.json').version);
  process.exit(0);
}

/**
 * Set `NODE_ENV` to test if none
 */

process.NODE_ENV = process.NODE_ENV || 'test';

/**
 * Try to load the bootstrap file.
 */

var bootstrap = path.resolve(options.setup || 'hydro.conf.js');

if (fs.existsSync(bootstrap)) {
  var setup = require(bootstrap);
  if ('function' === typeof setup) setup(hydro);
}

/**
 * Options
 */

options.formatter = options.formatter || 'hydro-simple';
options.tests = [];

if (options._.length === 0) options._.push('test/*.js');

options._.forEach(function(pattern) {
  glob(pattern, { sync: true }).forEach(function(file) {
    if (fs.statSync(file).isDirectory()) return;
    options.tests.push(path.resolve(file));
  });
});

hydro.run(options, function(result) {
  process.exit(result.failed.length);
});
