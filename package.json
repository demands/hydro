{
  "name": "hydro",
  "version": "0.8.4",
  "preferGlobal": true,
  "description": "Teeny-weeny test runner for Node.js",
  "main": "./lib/hydro.js",
  "homepage": "https://github.com/hydrojs/hydro",
  "scripts": {
    "test": "bin/hydro",
    "coverage": "istanbul cover bin/_hydro -- --formatter hydro-silent"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hydrojs/hydro"
  },
  "bin": {
    "hydro": "./bin/hydro",
    "_hydro": "./bin/_hydro"
  },
  "author": "Veselin Todorov <hi@vesln.com>",
  "license": "MIT",
  "testling": {
    "scripts": [
      "hydro.js",
      "node_modules/hydro-tap/hydro-tap.js",
      "test/support/testling.js"
    ],
    "files": [
      "test/*.js"
    ],
    "browsers": {
      "ie": [
        7,
        8,
        9
      ],
      "firefox": [
        13
      ],
      "chrome": [
        20
      ],
      "safari": [
        5.1
      ],
      "opera": [
        12
      ]
    }
  },
  "devDependencies": {
    "nixt": "*",
    "hydro-silent": "*",
    "hydro-simple": "*",
    "hydro-file-suite": "*",
    "hydro-minimal": "*",
    "hydro-tap": "*",
    "coveralls": "~2.3.0",
    "istanbul": "~0.1.46",
    "component": "~0.18.0"
  },
  "dependencies": {
    "super": "*",
    "evts": "0.0.1",
    "tryc": "*",
    "fload": "*",
    "instance": "*",
    "globalo": "*",
    "v8-argv": "~0.1.0",
    "optimist": "~0.6.0"
  }
}
